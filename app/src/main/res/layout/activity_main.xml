<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhg.sdgame.MainActivity">

    <HorizontalScrollView
        android:id="@+id/main_top_hsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_top_hsv_bg"
        android:fillViewport="true"
        android:scrollbars="none"
        >
        <RadioGroup
            android:id="@+id/main_top_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/main_top_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_top_rp_textcolor"
                android:button="@null"
                android:textSize="16sp"
                android:text="文章首页"
                android:layout_alignBottom="@+id/main_top_hsv"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"/>
            <RadioButton
                android:id="@+id/main_top_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:textSize="16sp"
                android:textColor="@color/main_top_rp_textcolor"
                android:text="热点新闻"
                android:gravity="center"
                android:layout_alignBottom="@+id/main_top_hsv"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"/>
            <RadioButton
                android:id="@+id/main_top_btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:textSize="16sp"
                android:textColor="@color/main_top_rp_textcolor"
                android:text="游戏杂谈"
                android:gravity="center"
                android:layout_alignBottom="@+id/main_top_hsv"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"/>
            <RadioButton
                android:id="@+id/main_top_btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:textSize="16sp"
                android:textColor="@color/main_top_rp_textcolor"
                android:text="硬件信息"
                android:gravity="center"
                android:layout_alignBottom="@+id/main_top_hsv"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"/>
            <RadioButton
                android:id="@+id/main_top_btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:textSize="16sp"
                android:textColor="@color/main_top_rp_textcolor"
                android:text="游戏前瞻"
                android:gravity="center"
                android:layout_alignBottom="@+id/main_top_hsv"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"/>
            <RadioButton
                android:id="@+id/main_top_btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:textSize="16sp"
                android:textColor="@color/main_top_rp_textcolor"
                android:text="游戏评测"
                android:gravity="center"
                android:layout_alignBottom="@+id/main_top_hsv"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"/>
            <RadioButton
                android:id="@+id/main_top_btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:textSize="16sp"
                android:textColor="@color/main_top_rp_textcolor"
                android:text="原创精品"
                android:gravity="center"
                android:layout_alignBottom="@+id/main_top_hsv"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"/>
            <RadioButton
                android:id="@+id/main_top_btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:textSize="16sp"
                android:textColor="@color/main_top_rp_textcolor"
                android:text="游戏盘点"
                android:gravity="center"
                android:layout_alignBottom="@+id/main_top_hsv"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"/>
            <RadioButton
                android:id="@+id/main_top_btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:textSize="16sp"
                android:textColor="@color/main_top_rp_textcolor"
                android:text="时事焦点"
                android:gravity="center"
                android:layout_alignBottom="@+id/main_top_hsv"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"/>
            <RadioButton
                android:id="@+id/main_top_btn10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:textSize="16sp"
                android:textColor="@color/main_top_rp_textcolor"
                android:text="攻略中心"
                android:gravity="center"
                android:layout_alignBottom="@+id/main_top_hsv"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"/>
        </RadioGroup>

    </HorizontalScrollView>

    <RadioGroup
        android:id="@+id/main_bottom_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/main_bottom_btn1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="文章"
            android:drawableTop="@drawable/main_bottom_1"
            android:gravity="center"
            android:button="@null"
            android:textColor="#ffffff"/>
        <RadioButton
            android:id="@+id/main_bottom_btn2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/main_bottom_2"
            android:text="论坛"
            android:gravity="center"
            android:button="@null"
            android:textColor="#ffffff"/>
        <RadioButton
            android:id="@+id/main_bottom_btn3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/main_bottom_3"
            android:text="游戏"
            android:textColor="#ffffff"/>
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/main_center_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:layout_above="@id/main_bottom_rg"
        android:layout_below="@id/main_top_hsv"
        android:background="@drawable/main_top_hsv_bg"
        ></android.support.v4.view.ViewPager>



</RelativeLayout>
